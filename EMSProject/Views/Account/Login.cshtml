@model EMSProject.Models.ViewModel.SignIn
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="col-4 offset-4">
        <div class="card mt-5">
            <div class="card-header">
                <h4 class="card-title">Sign In</h4>
            </div>
            <div class="card-body">
                <form asp-action="Login" asp-controller="Account" method="post">
                    <div class="form-group">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                            </div>
                            <input class="form-control" asp-for="Email" placeholder="Username">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                            </div>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Login</button>
                    </div>
                    <div class="form-group">
                        <a asp-action="Register" asp-controller="Account">Signup here....</a>
                    </div>

                    <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>